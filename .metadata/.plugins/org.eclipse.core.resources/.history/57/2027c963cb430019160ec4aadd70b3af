	public void GetOprion(String input[]) {
		
		for(int i = 0 ; i < input.length -1 ; i ++ ) {
			
			if(input[i].charAt(0) == '-') {
			
				switch(input[i].charAt(1)) {
					case 'o':
						break;
						
					case 'v':
						break;
						
					case 'X':
						break;
						
					case 'd':
						break;
				}
			}
			
			
		}
		
	}
	
